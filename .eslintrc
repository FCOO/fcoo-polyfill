{
    "env": {
        "browser": true,
        "jquery" : true
    },

    "extends": "eslint:recommended",
 
    "globals": {
        "$"         : false,
        "L"         : false,
        "undefined" : false,
        "moment"    : false,
        "Raven"     : false
    },

    "allowInlineConfig": true,

    "rules": {
        "strict"                  : "warn",
        "camelcase"               : "off",
        "no-mixed-spaces-and-tabs": "warn",
        "semi"                    : "warn",
        "no-unused-vars"          : "warn",
        "no-extra-semi"           : "warn",
        "no-empty"                : "warn",
        "no-extra-boolean-cast"   : "warn",
        "no-undef"                : "off"

    }
}
